 <article class="uk-article">

    <h1 class="uk-article-title">{{post.title}}</h1>

    <p class="uk-article-meta">Written by <a href="/user/{{post.user.username}}">{{post.user.username}}</a> on {{post.created_at}}.</p>

    <p>{{post.content}}</p>

    <div class="uk-grid-small uk-child-width-auto" uk-grid>
        <div>
            <a class="uk-button uk-button-text" href="/post/{{id}}">{{post.comments.length}} Comments</a>
        </div>
    </div>
 {{!-- OPTIONALLY RENDER COMMENT FORM IF LOGGED IN --}}
 {{#if loggedIn}}
    <form class="comment-form uk-text-center">
    <div class="uk-margin">
            <textarea class="uk-textarea" name="comment-body" rows="5" placeholder="Leave a comment"></textarea>
        </div>
      <button class="uk-button uk-button-default uk-width-1-3" type="submit">SUBMIT</button>
</form>
{{/if}}

</article>
{{#each post.comments}}
<article class="uk-comment uk-comment-primary">
    <header class="uk-comment-header">
        <div class="uk-grid-medium uk-flex-middle" uk-grid>
            <div class="uk-width-expand">
                <h4 class="uk-comment-title uk-margin-remove"><a class="uk-link-reset" href="/user/{{user.username}}">{{user.username}}</a></h4>
                <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                    <li>Written on {{created_at}}</li>
                </ul>
            </div>
        </div>
    </header>
    <div class="uk-comment-body">
        <p>{{comment_text}}</p>
    </div>
</article>
{{/each}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}

