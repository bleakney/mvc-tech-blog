<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="uk-margin">
      <label for="edit-post-title" class="uk-form-label">Title</label>
      <textarea
        class="uk-textarea"
        name="edit-post-title"
        rows="1"
      >{{post.title}}</textarea>
    </div>
    <div class="uk-margin">
      <label for="edit-post-content" class="uk-form-label">Content</label>
      <textarea
        class="uk-textarea"
        name="edit-post-content"
        rows="5"
      >{{post.content}}</textarea>
    </div>
    <button class="uk-button uk-button-default uk-width-1-3" type="submit">Save
      Post</button>
    <button
      class="uk-button uk-button-default uk-width-1-3 delete-post-button"
      type="button"
    >Delete Post</button>
  </form>

  <form class="comment-form uk-text-center">
    <div class="uk-margin">
      <textarea
        class="uk-textarea"
        name="comment-body"
        rows="5"
        placeholder="Leave a comment"
      ></textarea>
    </div>
    <button
      class="uk-button uk-button-default uk-width-1-3"
      type="submit"
    >SUBMIT</button>
  </form>
</article>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>